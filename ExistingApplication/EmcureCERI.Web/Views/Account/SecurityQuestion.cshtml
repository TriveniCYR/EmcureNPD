@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> SharedLocalizer
@model SecurityQuestionViewModel
@{
    ViewData["Title"] = @SharedLocalizer["Security Question"].Value;
}

<section class="beforeLoginPage">
    <div class="container-fluid">
        <div class="loginFormContainer">
            <div class="appoinment-form fadeIn wow" data-wow-duration="1s">
                <h2>@SharedLocalizer["Security Question"].Value</h2>
                <div class="divider">
                    <span><i class="glyphicon glyphicon-certificate"></i></span>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <form asp-action="SecurityQuestion" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @Html.HiddenFor(model => model.Email)
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Question1, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.EditorFor(model => model.Answer1, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.Answer1, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Question2, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.EditorFor(model => model.Answer2, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.Answer2, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Question3, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.EditorFor(model => model.Answer3, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.Answer3, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-default btn-block">@SharedLocalizer["Send"].Value</button>
                            <br />
                            <br />
                            <a class="btn btn-primary btn-block" asp-area="" asp-controller="Account" asp-action="Login">@SharedLocalizer["Back to Login"].Value</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<style>
    footer, hr {
        display: none;
    }
</style>
