@{
    ViewData["Title"] = "Gantt View";
}
<link href="~/css/GanttSite.css" rel="stylesheet" type="text/css" />
<script src="~/codebase/dhtmlxgantt.js"></script>
<link rel="stylesheet" href="~/codebase/dhtmlxgantt.css" type="text/css" />
<script src="~/Scripts/summarymain.js"></script>

<style>
    .gantt_task_progress {
        text-align: left;
        padding-left: 10px;
        box-sizing: border-box;
        color: white;
        font-weight: bold;
        /* background-color: rgba(33,33,33,0.17);*/
        /*background-color:orangered;*/
    }

    .gantt_task_content {
        padding-left: 30px;
    }

    /*.gantt_task_progress {
        background-color: #46ad51;
    }*/
    .task-no-progress {
        background: #3db9d3;
    }

        .task-no-progress .gantt_task_progress {
            background-color: #3db9d3;
        }

    .task-in-progress {
        background-color: #3db9d3;
    }

        .task-in-progress .gantt_task_progress {
            background-color: #3db9d3;
        }

    .task-full-progress {
        background-color: gray;
    }

        .task-full-progress .gantt_task_progress {
            background-color: gray;
        }



    /*new code added on date 10/03/2021*/
