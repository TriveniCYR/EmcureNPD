@model EmcureNPD.Business.Models.ForgotPasswordViewModel
@*@inject IViewLocalizer Localizer*@
@inject Microsoft.Extensions.Localization.IStringLocalizer<EmcureNPD.Resource.Account> Localizer
@inject Microsoft.Extensions.Localization.IStringLocalizer<EmcureNPD.Resource.Shared> SharedLocalizer
@{
    ViewData["Title"] = @Localizer["ForgotPasswordTitle"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <h3 class="mb-0"><b>@Localizer["ForgotPassword"].Value</b></h3>
        </div>
        <div class="card-body">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    @Html.ValidationMessage(@Localizer["EmailNotExist"], new { @class = "text-danger" })
                    @Html.ValidationMessage(@Localizer["MailSent"], new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">@SharedLocalizer["Submit"]</button>
                    </div>
                    <div class="col-4">
                        <a class="btn btn-danger" href="@Url.Action("Login","Account")" data-dismiss="modal">@Localizer["Login"]</a>
                    </div>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="row">
                        <div class="text-danger">@ViewBag.Message</div>
                    </div>
                }
                </form>
        </div>
        </div>
</div>