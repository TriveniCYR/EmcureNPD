@using EmcureNPD.Web.Controllers
@using Microsoft.AspNetCore.Mvc.Localization

@model EmcureNPD.Business.Models.LoginViewModel
@*@inject IViewLocalizer Localizer*@
@inject Microsoft.Extensions.Localization.IStringLocalizer<EmcureNPD.Resource.Account> Localizer


@{
    ViewData["Title"] = @Localizer["Login"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <h3 class="mb-0"><b>@Localizer["Login"].Value</b></h3>
        </div>
        <div class="card-body">
            <p class="login-box-msg">@Localizer["SignSession"]</p>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                @if (ViewBag.errormessage != null)
                {
                    <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
                @*<div class="input-group mb-3">
                        @Html.DropDownListFor(model => model.BusinessUnitId, new SelectList(Model.masterBusinessUnitEntities, "BusinessUnitId", "BusinessUnitName"),"Select Business Unit", new { @class = "form-control" })
                       
                </div>*@

                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="@Localizer["Password"]" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>

              

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                @Localizer["RememberMe"]
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">@Localizer["Login"]</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <p class="mb-1">
                <a href="@Url.Action("ForgotPassword","Account")">@Localizer["Forgot Password"]</a>
            </p>
        </div>
    </div>
</div>